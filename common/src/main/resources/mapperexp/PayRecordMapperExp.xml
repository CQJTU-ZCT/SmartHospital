<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqjtu.mapperexp.PayRecordMapperExp">
    <select id="get" resultType="com.cqjtu.model.PayRecord">
        SELECT * FROM pay_record
        <if test="null != param">
            WHERE
            <foreach collection="param" item="key" separator=",">
                ${key} = ${param[${key}]}
            </foreach>
        </if>
        <if test="null != page and null != limit">
            LIMIT ${page}, ${limit}
        </if>
    </select>

    <insert id="insert" parameterType="com.cqjtu.model.PayRecord">
        INSERT INTO pay_record
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="null != recordId">
                record_id,
            </if>
            <if test="null != id">
                id,
            </if>
            <if test="null != payId">
                pay_id,
            </if>
            <if test="null != createTime">
                create_time,
            </if>
            <if test="null != finishTime">
                finish_time,
            </if>
            <if test="null != cancelTime">
                cancel_time,
            </if>
            <if test="null != price">
              price,
            </if>
        </trim>
        VALUES
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="null != recordId">
                ${record_id},
            </if>
            <if test="null != id">
                ${id},
            </if>
            <if test="null != payId">
                ${pay_id},
            </if>
            <if test="null != createTime">
                ${create_time},
            </if>
            <if test="null != finishTime">
                ${finish_time},
            </if>
            <if test="null != cancelTime">
                ${cancel_time},
            </if>
            <if test="null != price">
                ${price},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.cqjtu.model.PayRecord">
        UPDATE emr_record
        <set>
            <if test="null != id">
                id = ${id},
            </if>
            <if test="null != payId">
                pay_id = ${payId},
            </if>
            <if test="null != createTime">
                create_time = ${createTime},
            </if>
            <if test="null != finishTime">
                finish_time = ${finishTime},
            </if>
            <if test="null != cancelTime">
                cancel_time = ${cancelTime},
            </if>
            <if test="null != price">
                price = ${price}
            </if>
        </set>
        <if test="null != recordId">
            WHERE record_id = ${recordId}
        </if>
    </update>

    <select id="count" resultType="Integer">
        SELECT COUNT(*) FROM pay_record
        <if test="null != param">
            WHERE
            <foreach collection="param" item="key" separator=",">
                ${key} = ${param[${key}]}
            </foreach>
        </if>
    </select>

    <delete id="delete">
        DELETE FROM emr_record
        <if test="null != recordId">
            WHERE record_id = ${recordId}
        </if>
    </delete>

    <select id="getById" resultType="com.cqjtu.model.PayRecord">
        SELECT * FROM pay_record
        <if test="null != recordId">
            WHERE record_id = ${recordId}
        </if>
    </select>

</mapper>