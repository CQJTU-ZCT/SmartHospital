<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqjtu.mapperexp.TitleMapperExp">

    <select id="queryTitle" resultType="com.cqjtu.model.Title" >
        SELECT title_id ,name
        from title
        <if test="name != null ">
            WHERE   name LIKE  CONCAT(CONCAT('%', #{name}), '%')
        </if>
    </select>

    <update id="updateTitle" parameterType="com.cqjtu.model.Title">
        update title
        set  name = #{name}
        where title_id = #{titleId};
    </update>

    <insert id="addTitle" parameterType="com.cqjtu.model.Title">
        <selectKey resultType="java.lang.Integer" keyColumn="title_id">
            SELECT last_insert_id();
        </selectKey>

        INSERT INTO title
        <trim prefix="("  suffix=")">
            <if test="titleId != null">
                title_id,
            </if>
            <if test="name != null">
                name
            </if>
        </trim>
        VALUES
        <trim prefix="("  suffix=")">
            <if test="titleId != null">
                #{titleId},
            </if>
            <if test="name != null">
                #{name}
            </if>
        </trim>
    </insert>


</mapper>