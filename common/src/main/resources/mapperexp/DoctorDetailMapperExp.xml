<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqjtu.mapperexp.DoctorMapperExp">


    <select id="queryDoctor" resultType="com.cqjtu.model.Doctor">
        SELECT id_card,id,name,mail,phone
        from doctor
        <where>
            <trim prefixOverrides="and">
                <if test="idCard != null ">
                    and  id_card LIKE  CONCAT(CONCAT('%', #{idCard}), '%')
                </if>
                <if test="name != null ">
                    and   name LIKE  CONCAT(CONCAT('%', #{name}), '%')
                </if>
                <if test="id != null ">
                    and   id =#{id}
                </if>
                <if test="mail != null ">
                    and   mail LIKE  CONCAT(CONCAT('%', #{mail}), '%')
                </if>
                <if test="phone != null ">
                    and   phone LIKE  CONCAT(CONCAT('%', #{phone}), '%')
                </if>
            </trim>
        </where>
    </select>


    <update id="updateDotor" parameterType="com.cqjtu.model.Doctor">
        update branch
        <set>
            <if test="name != null">
                name =#{name},
            </if>
            <if test="mail != null">
                mail=#{mail},
            </if>
            <if test="phone != null">
                phone=#{phone},
            </if>
            <if test="id != null">
                id=#{id}
            </if>
        </set>
        where id_card = #{idCard}
    </update>


    <update id="updateDoctorIdCard">
        <if test="idCard != null">
            update doctor
            SET
            id_card = #{idCard}
        </if>
    </update>





    <insert id="addDoctor" parameterType="com.cqjtu.model.Doctor">

        INSERT  INTO doctor

        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="idCard != null">
                id_card ,
            </if>
            <if test="name != null">
                name ,
            </if>
            <if test="mail != null">
                mail,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="id != null">
                id
            </if>
            <if test="id == null">
                id
            </if>
        </trim>
        values
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="idCard != null">
                #{idCard} ,
            </if>
            <if test="name != null">
                #{name} ,
            </if>
            <if test="mail != null">
                #{mail},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
            <if test="id != null">
                #{id}
            </if>
            <if test="id == null">
                1
            </if>
        </trim>

    </insert>


</mapper>